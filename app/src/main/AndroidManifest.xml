<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nilaksha.schoolbus">

    <!-- //user for internet access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- //check network avalability -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- access location permission -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".NetworkError" />
        <activity android:name=".DriverHome" />
        <activity android:name=".RegisterParent" />
        <activity android:name=".ParentHome" />
        <activity android:name=".ParentChildrenRegister" />
        <activity android:name=".AddChildren" />
        <activity android:name=".VehicleFeeDriver" />
        <activity android:name=".ChildrenListHome" />
        <activity android:name=".ChildrenAttendance" />
        <activity android:name=".StatusHome" />
        <activity android:name=".ChildrenListSchool" />
        <activity android:name=".FeeStatus" />
        <activity android:name=".AddSchool" />
        <activity android:name=".ReportHomeDriver" />
        <activity android:name=".ReportPaymentDriver" />
        <activity android:name=".IncomeReportDriver" />
        <activity android:name=".ViewLocation" />
        <activity android:name=".ReportHomeParent" />
        <activity android:name=".VehicleFeeReport" />
        <activity android:name=".DropPickReport"></activity>
    </application>

</manifest>